<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="theme-color" content="#000000">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="SHIRT">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <title>SHIRT</title>
    <link rel="apple-touch-icon" href="/icons/icon-192.png">
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <button id="sidebar-toggle-btn" class="sidebar-toggle-btn" aria-label="เปิดเมนู">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
    </button>

    <div class="overlay"></div>

    <div class="container">
        <!-- ส่วนฟอร์มด้านซ้าย -->
        <aside class="sidebar">
            <form id="stockForm" action="/submit" method="post" enctype="multipart/form-data">
                <div class="sidebar-header">
                    <h2>   </h2>
                </div>

                <div id="imagePreview" class="image-preview"></div>

                <div class="form-group-hide" >
                    <input id="sku" type="text" name="sku" placeholder="ป้อน SKU เพื่ออัปเดต (ปล่อยว่างเพื่อสร้างใหม่)" autocomplete="off" >
                </div>

                <div class="sidebar-footer">
                    <div class="form-actions-grid">
                        <div class="form-group qty-group">
                            <label for="qty">จำนวน</label>
                            <select id="qty" name="qty" class="action-item">
                                <% for (let i=1; i<=12; i++) { %>
                                    <option value="<%= i %>" <%= i === 1 ? 'selected' : '' %>><%= i %></option>
                                <% } %>
                            </select>
                        </div>
                        <label for="image" class="upload-btn action-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
                            รูปหน้า
                        </label>
                        <input id="image" type="file" name="image" accept="image/*" style="display: none;">
                        <label for="image_b" class="upload-btn action-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
                            รูปหลัง
                        </label>
                        <input id="image_b" type="file" name="image_b" accept="image/*" style="display: none;">
                    </div>
                    <div class="form-group">
                        <label>ขนาด</label>
                        <div class="size-buttons" role="group">
                            <% ['XS', 'S', 'M', 'L', 'XL', 'XXL'].forEach(size => { %>
                                <button type="submit" name="size" value="<%= size %>" class="size-btn-<%= size.toLowerCase() %>"><%= size %></button>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </form>
        </aside>

        <!-- ส่วนแสดงผลด้านขวา -->
        <main class="product-grid">
            <% if (items.length === 0) { %>
                <div class="empty-state-container">
                    <p class="empty-state">ยังไม่มีสินค้าในสต็อก เริ่มเพิ่มได้เลย!</p>
                    <button id="import-btn" class="btn-primary">Import</button>
                </div>
            <% } else { %>
                <% items.forEach(item => { %>
                    <div class="card" data-sku="<%= item.sku %>" data-item='<%- JSON.stringify(item) %>'>
                        <div class="card-image-container">
                            <img class="card-image active" src="/uploads/<%= item.imagepath %>" alt="รูปสินค้า <%= item.sku %>" loading="lazy">
                            <% if (item.imagepath_b) { %>
                                <img class="card-image" src="/uploads/<%= item.imagepath_b %>" alt="รูปสินค้า <%= item.sku %> รอง" loading="lazy">
                            <% } %>
                            <% if (item.imagepath_b) { %>
                                <div class="dots-container">
                                    <span class="dot active"></span>
                                    <span class="dot"></span>
                                </div>
                            <% } %>
                            <button class="delete-icon-btn hidden" aria-label="ลบสินค้า <%= item.sku %>">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
                            </button>
                        </div>
                        <div class="card-content">
                            <div class="card-header">
                                <span class="sku-tag">SKU: <%= item.sku %></span>
                                <!-- ปุ่มแก้ไขถูกซ่อนไว้ในตอนแรก -->
                                <button class="edit-btn hidden" aria-label="แก้ไขสินค้า <%= item.sku %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>
                                </button>
                      
                             
                            </div>
                            <div class="badges">
                                <% const sizes = ['xs', 's', 'm', 'l', 'xl', 'xxl']; %>
                                <% sizes.forEach(size => { %>
                                    <% if (item.sizes && item.sizes[size] > 0) { %>
                                        <span class="badge badge-<%= size %>"><%= size.toUpperCase() %>: <strong><%= item.sizes[size] %></strong></span>
                                    <% } %>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </main>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="modal-overlay" style="display: none;">
        <div id="modalContent" class="modal-content">
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editSku" name="sku">
                    <div class="form-group">
                        <label for="editSkuDisplay">รหัสสินค้า</label>
                        <input id="editSkuDisplay" type="text" disabled>
                    </div>
                    <div class="form-group">
                    
                    </div>
                    <div id="editSizeInputs" class="edit-sizes-grid">
                        
                    </div>
                    <footer class="modal-footer">
                        <button type="button" id="saveChangesBtn" class="btn-primary">บันทึกการเปลี่ยนแปลง</button>
                    </footer>
                </form>
            </div>
        </div>
    </div>
    
    <script src="/js/script.js"></script>
</body>
</html>
